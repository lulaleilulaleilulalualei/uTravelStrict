/* pages/myBill/myBill.wxss */
@import "../common/noMore/noMore.wxss"

.myBill {
  width: 100%;
  height: 100%;
  position: relative;
  display: flex;
  flex-direction: column;
}
.topNavCut {
  height: 80rpx;
  width: 100%;
  background: #FFDA4C;
  display: flex;
}
.topNavCut>view {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  color: #000000;
}
.topNavCut>view>text {
  transition: all 0.2s;
}
.topNavCut>view>text::after {
  content: '';
  display: block;
  width: auto;
  height: 4rpx;
  background: transparent;
  margin-top: 4rpx;
}
.topNavCut .activeShow {
  color: #fff;
}
.topNavCut .activeShow>text {
  display: flex;
  flex-direction: column;
}
.topNavCut .activeShow>text::after {
  background: #fff;
}

.listShowBox {
  flex:1;
  width: 100%;
  overflow: hidden;
}
.listShowBox>scroll-view {
  width: 100%;
  height: 100%;
}

.showInInfoBox, .showOutInfoBox {
  width: auto;
  height: auto;
  padding: 30rpx 40rpx;
}
.itemInInfoShow {
  width: auto;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx 0;
  border-bottom: 1px solid #EFEFEF;
}
.itemInInfoShow>view {
  height: 180rpx;
}
.itemInLeft {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.itemInTitle {
  font-size: 36rpx;
  color: #000000;
  width: 440rpx;
  overflow:hidden;
  text-overflow:ellipsis;
  white-space:nowrap;
  font-weight: 600;
}
.itemInOrder {
  font-size: 24rpx;
  color: #929292;
}
.itemInTime {
  font-size: 24rpx;
  color: #929292;
}
.itemInRight {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: flex-end;
  font-size: 36rpx;
  color: #000000;
  font-weight: 600;
}

.itemInoutfoShow {
  width: auto;
  padding: 30rpx 0;
  display: flex;
  align-items: center;
  justify-content: space-between;
  border-bottom: 1px solid #EFEFEF;
}

.itemOutTitle {
  font-size: 36rpx;
  color: #000000;
  font-weight: 600;
  margin-bottom: 20rpx;
}
.itemOutTime {
  font-size: 24rpx;
  color: #929292;
}
.itemOutRight {
  font-size: 36rpx;
  color: #000000;
  font-weight: 600;
}

.noDataShow {
  position: absolute;
  top:0;
  left: 0;
  z-index: 999;
  width: 100%;
  height: 100%;
  background: #fff;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.noDataShow>view {
  width: 224rpx;
  height: 160rpx;
  margin-bottom: 50rpx;
}
.noDataShow>text {
  font-size: 32rpx;
  color: #939290;
}

.itemInUserInfo {
  width: auto;
  display: flex;
  align-items: center;
}
.itemInUserInfo>view {
  width: 30rpx;
  height: 30rpx;
  border-radius: 50%;
  border: 1rpx solid #efefef;
  margin-right: 20rpx;
  overflow: hidden;
}
.itemInUserInfo>text {
  flex: 1;
  font-size:24rpx;
  color:#929292;
  overflow:hidden;
  text-overflow:ellipsis;
  white-space:nowrap;
}

.itemInRatio {
  font-size: 32rpx;
  color: #A0ABB1;
  font-weight: normal;
}