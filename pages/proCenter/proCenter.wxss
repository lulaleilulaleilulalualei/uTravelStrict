/* pages/proCenter/proCenter.wxss */
.proCenter {
  padding: 60rpx 40rpx;
}
.itemProShow {
  position: relative;
  box-shadow: 0 10rpx 56rpx 0 rgba(111,113,115,0.15);
  border-radius: 14rpx;
  overflow: hidden;
}
.itemProShow:not(:last-child) {
  margin-bottom: 40rpx;
}
.itemProImgShow {
  width: auto;
  height: 300rpx;
  background: #eee;
}
.itemProShow>text {
  display: block;
  width: auto;
  padding: 20rpx;
  font-size: 28rpx;
  color: #000000;
}

.toSharePro {
  position: absolute;
  top: 30rpx;
  right: -5rpx;
  width: auto;
  height: 50rpx;
  padding: 0 15rpx 0 20rpx;
  border-top-left-radius: 25rpx;
  border-bottom-left-radius: 25rpx;
  display: flex;
  align-items: center;
  background-color: #fff;
}
.toSharePro>image {
  width: 22rpx;
  height: 22rpx;
  margin-right: 10rpx;
}
.toSharePro>text {
  font-size: 24rpx;
  color: #000000;
}

.getPoster {
  position: absolute;
  top: 100rpx;
  right: -5rpx;
  width: auto;
  height: 50rpx;
  padding: 0 15rpx 0 20rpx;
  border-top-left-radius: 25rpx;
  border-bottom-left-radius: 25rpx;
  display: flex;
  align-items: center;
  background-color: #fff;
}
.getPoster>text {
  font-size: 24rpx;
  color: #000000;
}
