
::-webkit-scrollbar{
  width: 0;
  height: 0;
  color: transparent;
}
.travelerInfo {
  position: fixed;
  top:0;
  left:0;
  z-index: 200;
  width: 100%;
  height: 100%;
  background: rgba(0,0,0,0.7);
}
.infoBox {
  position: absolute;
  bottom:0;
  left:0;
  width: 100%;
  height: 1016rpx;
  background: #fff;
  display: flex;
  flex-direction: column;
}
.infoBoxTitle {
  width: 100%;
  height: 90rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
  color: #222222;
  border-bottom: 1px solid #EFEFEF;
}
.traverlerInfoList {
  height: 826rpx;
  width: auto;
  padding: 0 20rpx;
  padding-bottom: 100rpx;
}
.itemTravelerInfo {
  margin-bottom: 40rpx;
}
.itemInfoTitle {
  font-size: 28rpx;
  color: #000000;
  /* padding-top: 30rpx; */
  margin-bottom: 20rpx;
  font-weight: 600;
}
.itemInfoShow {
  font-size: 28rpx;
  color: #000000;
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 20rpx;
}
.closeTravelerInfoBox {
  position: absolute;
  bottom: 0;
  left: 0;
  z-index: 20;
  width: 100%;
  height: 100rpx;
  background: #FFDA4C;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
  color: #222222;
}