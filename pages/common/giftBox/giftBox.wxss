
.showGiftDetail {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0,0,0,0.7);
  z-index: 200;
  display: flex;
  align-items: center;
  justify-content: center;
}
.giftDetailBox {
  width: 650rpx;
  height: 900rpx;
  padding: 30rpx;
  background: #FFFFFF;
  border-radius: 4px;
}
.giftShowImg {
  height: 380rpx;
  width: auto;
  margin-bottom: 10rpx;
  background: #FFEFEF;
}
.giftShowDesc>view {
  font-size: 36rpx;
  color: #222222;
  margin-bottom: 10rpx;
}
.giftShowDesc>text {
  font-size: 32rpx;
  color: #979797;
}