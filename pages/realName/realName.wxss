/* pages/realName/realName.wxss */
.realName {
  padding: 30rpx 40rpx;
}
.itemInpInfo {
  padding: 30rpx 0;
  border-bottom:  1px solid #EFEFEF;
  display: flex;
  align-items: center;
}
.itemInpInfo>text {
  display: block;
  font-size: 28rpx;
  color: #222222;
  width: 120rpx;
  margin-right: 60rpx;
}
.itemInpInfo>input {
  display: block;
  height: 100%;
  flex:1;
  font-size: 28rpx;
  color: #000000;
}
.itemInpInfo .codeDefaultBtn {
  background: #FFDA4C;
  border-radius: 4rpx;
  padding: 4rpx 10rpx;
  font-size: 28rpx;
  color: #000000;
  margin-left: 10rpx;
}
.itemInpInfo .timeCode {
  background: #ccc;
}
.toApplyBtn {
  width: 568rpx;
  height: 88rpx;
  margin: 0 auto;
  background: #FFDA4C;
  border-radius: 4rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  color: #000000;
  margin-top: 60rpx;
}

.addCity {
  flex:1;
  font-size: 28rpx;
  color: #808080;
  position: relative;
}
.itemInpInfo .posSuccess {
  color: #000;
}
.addCity button {
  position: absolute;
  top:0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 10;
  opacity: 0;
}

.stageDistributor {
  display:block;
  height:auto;
  flex:1;
}
.stageDistributor view {
  width: 100%;
  height:50rpx;
  line-height: 50rpx;
  font-size: 28rpx;
  color: #808080;
}
.stageDistributor .stagePicker {
  color: #000;
}