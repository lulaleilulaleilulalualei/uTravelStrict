/* pages/usualAddress/usualAddress.wxss */
.usualAddress {
  width: auto;
  height: 100%;
  background: #F1F1F5;
  padding: 0 20rpx;
}
.usualAddressBox {
  width: auto;
  height: auto;
  padding-top: 30rpx;
}
.inputAddressInfo {
  width: auto;
  height: auto;
  background: #FFFFFF;
  border-radius: 8rpx;
  margin-bottom: 30rpx;
  padding: 0 20rpx;
}
.compeleAddress {
  width: auto;
  height: 88rpx;
  background: #FFDA4C;
  border-radius: 4rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  color: #000000;
}
.itemAddressInfo {
  width: auto;
  height: 100rpx;
  display: flex;
  align-items: center;
}
.itemAddressInfo:not(:last-child) {
  border-bottom: 1px solid #EFEFEF;
}
.itemAddressInfo>text {
  display: block;
  font-size: 28rpx;
  color: #222222;
  width: 112rpx;
  margin-right: 60rpx;
}
.itemAddressInfo>input {
  flex: 1;
  height: 40rpx;
  font-size: 28rpx;
  color: #222222;
}
.itemAddressInfo>picker {
  flex: 1;
}
.addressInfoShow {
  width: auto;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.addressInfoShow.noSelectRegion>text {
  color: #B0B0B0;
}
.addressInfoShow>text {
  flex: 1;
  display: block;
  font-size: 28rpx;
  color: #222222;
}
.addressInfoShow::after {
  content: '';
  display: block;
  width: 14rpx;
  height: 14rpx;
  border: 3rpx solid #ccc;
  border-bottom: none;
  border-left: none;
  transform: rotate(45deg);
  margin-right: 20rpx;
}

.getWxAddress {
  padding:0 10rpx;
  height:50rpx;
  width:170rpx;
  text-align:center;
  line-height:50rpx;
  font-size:28rpx;
  color:#222222;
  background:#FFDA4C;
  border-radius:8rpx;
  margin-left:10rpx;
}