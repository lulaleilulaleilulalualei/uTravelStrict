/* pages/checkingTicket/checkingTicket.wxss */
.checkingTicket {
  width: 100%;
  height: 100%;
  background: #F1F1F5;
}
.checkingTicketBox {
  padding-top: 20rpx;
}
.checkTypeBox {
  background: #FFFFFF;
  border-radius: 8rpx;
  width: 710rpx;
  height: auto;
  margin: 20rpx;
}
.checkTypeName {
  width: auto;
  height: 64rpx;
  line-height: 64rpx;
  padding: 10rpx 20rpx;
  border: 2rpx solid #EFEFEF;
  font-size: 32rpx;
  color: #222222;
  font-weight: 700;
}

.toCheckTicket {
  width: auto;
  padding: 60rpx 0;
  display: flex;
  justify-content: center;
  flex-direction: column;
  align-items: center;
}

.showScanCode {
  width: 120rpx;
  height: 120rpx;
}

.phoneCheckInp {
  width: 560rpx;
  padding: 0 20rpx;
  height: 80rpx;
  font-size: 32rpx;
  color: #000;
  margin-bottom: 30rpx;
  overflow: hidden;
}
.phoneCheckInp>input {
  display: block;
  height: 100%;
  width: 100%;
  text-align: center;
  background-color: #efefef;
  border-radius: 8rpx;
}
.phoneCheckBtn {
  width: 120rpx;
  text-align: center;
  font-size: 32rpx;
  color: #fff;
  padding: 10rpx 0;
  border-radius: 8rpx;
  background: #FFDA4C;
}

.showMoreUserOrders {
  margin-top: 30rpx;
  height: auto;
  width: 100%;
}
.itemUserOrders {
  width: auto;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx;
}
.ordersProName {
  font-size: 32rpx;
  color: #000;
  max-width: 500rpx;
  overflow:hidden;
  text-overflow:ellipsis;
  white-space:nowrap;
  margin-bottom: 10rpx;
}
.ordersProCreateTime {
  font-size: 24rpx;
  color:#A0ABB1;
  margin-bottom: 10rpx;
}
.ordersProOrder {
  font-size: 28rpx;
  color:#A0ABB1;
}

.itemOrdersRight {
  font-size: 30rpx;
  background: #FFDA4C;
  color: #FFF;
  padding: 6rpx 12rpx;
  border-radius: 8rpx;
}

